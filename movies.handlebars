<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Movies</title>
<link rel="stylesheet" href="style.css">
</head>
<body>
<header>
  <h1>Movies</h1>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="bookinfo">Book Info</a></li>
      <li><a href="books">Books</a></li>
      <li><a href="borrowings">Borrowings</a></li>
      <li><a href="members">Members</a></li>
      <li><a href="movieinfo">Movie Info</a></li>
    </ul>
  </nav>
</header>
<main>
  <h2>Movies</h2>
  <table>
    <thead>
      <tr>
        <th><button id="showFormButton">New</button></th>
        <th>Movie ID <button>Filter</button></th>
        <th>Info ID <button>Filter</button></th>
        <th>Title <button>Filter</button></th>
        <th>Genre<button>Filter</button></th>
        <th>Release Year<button>Filter</button></th>
      </tr>
    </thead>
    <tbody>
      {{#each movies}}
      <tr>
        <td><form action="/deleteMovie" method="post">
            <input type="hidden" name="delete_movie_id" value="{{this.movie_id}}">
            <input type="submit" value="Delete">
          </form></td>
        <td>{{this.movie_id}}</td>
        <td>{{this.info_id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.genre}}</td>
        <td>{{this.release_year}}</td>
      </tr>
      {{else}}
      <tr>
          <td colspan="7">No movies found</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  
<div id="newMemberForm" style="display: none;">
  <h2>Add New Movie</h2>
  <form action="/addNewMovie" method="post">
    <label for="new_title">Info ID:</label>
    <input type="text" id="new_info_id" name="new_info_id"><br><br>
    <label for="new_title">Title:</label>
    <input type="text" id="new_title" name="new_title"><br><br>
    <label for="new_genre">Genre:</label>
    <input type="text" id="new_genre" name="new_genre"><br><br>
    <label for="new_release_year">Release Year:</label>
    <input type="text" id="new_release_year" name="new_release_year"><br><br>
    <input type="submit" value="Add New Movie">
  </form>
</div>

  <h2>Update Movie</h2>
  <form action="/updateMovie" method="post">
    <label for="movie_id">Movie ID:</label>
    <select id="movie_id" name="movie_id">
      {{#each movies}}
      <option value="{{this.movie_id}}">{{this.movie_id}}</option>
      {{/each}}
    </select><br><br>
    <label for="info_id">Info ID:</label>
    <input type="text" id="info_id" name="info_id"><br><br>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title"><br><br>
    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre"><br><br>
    <label for="release_year">Release Year:</label>
    <input type="text" id="release_year" name="release_year"><br><br>
    <input type="submit" value="Update Movie Info">
  </form>


  <h2>Delete Movie</h2>
  <form action="/deleteMovie" method="post">
    <label for="delete_movie_id">Movie ID:</label>
    <select id="delete_movie_id" name="delete_movie_id">
      {{#each movies}}
      <option value="{{this.movie_id}}">{{this.movie_id}}</option>
      {{/each}}
    </select><br><br>
    <input type="submit" value="Delete Movie">
  </form>
</main>
<footer>
  <p>&copy; Team Busy Bees</p>
</footer>
<script>
  document.getElementById('showFormButton').addEventListener('click', function() {
    var form = document.getElementById('newMemberForm');
    if (form.style.display === 'none') {
      form.style.display = 'block';
    } else {
      form.style.display = 'none';
    }
  });
  document.getElementById('submit').addEventListener('click', function() {
    var form = document.getElementById('newMemberForm');
      form.style.display = 'none';

  });
</script>

</body>
</html>